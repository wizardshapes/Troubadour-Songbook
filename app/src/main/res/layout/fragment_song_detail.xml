<LinearLayout
    android:id="@+id/detail_layout"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:weightSum="10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--<EditText xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--xmlns:tools="http://schemas.android.com/tools" android:id="@+id/song_detail"-->
        <!--style="?android:attr/textAppearanceLarge" android:layout_width="match_parent"-->
        <!--android:inputType="text"-->
        <!--android:layout_weight="1.25"-->
        <!--android:layout_height="0px" android:padding="16dp" android:textIsSelectable="true"-->
        <!--tools:context=".SongDetailFragment" />-->

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="7.5"
        android:id="@+id/trackList"
        android:layout_below="@+id/song_detail"
        android:layout_centerHorizontal="true" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_weight="2.5"
        android:padding="20dp"
        android:background="#222222"
        android:columnCount="3"
        android:rowCount="2"
        android:layout_height="0px">


        <SeekBar
            android:layout_width="fill_parent"
            android:layout_gravity="center"
            android:layout_columnSpan="3"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar" />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_fast_rewind_white_18dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1.5"
            android:id="@+id/button2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_play_circle_outline_white_18dp"
            android:layout_columnWeight="1.5"
            android:id="@+id/button" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_columnWeight="1.5"
            android:background="@drawable/ic_fast_forward_white_18dp"
            android:id="@+id/button3" />


    </GridLayout>


</LinearLayout>